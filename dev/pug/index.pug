- var shareTitle = "Freehold Games";
- var shareDesc = "Creators of Caves of Qud and Sproggiwood";
- var shareUrl = "http://freeholdgames.com";
- var shareTwitter = "@FreeholdGames";
- var shareThumb = "http://freeholdgames.com/img/shc-thumb";
- var shareAlt = shareTitle + '. ' + shareDesc;
