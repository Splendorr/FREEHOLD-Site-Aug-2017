doctype html
html(xmlns:fb="http://ogp.me/ns/fb#")
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width,initial-scale=1.0')

    title= shareTitle

    meta(name='description', content=shareDesc)
    meta(name='author', content= "Site by Nick Splendorr: splendorr.com")

    //- Schema.org markup for Google+
    meta(itemprop="name" content=shareTitle)
    meta(itemprop="description" content=shareDesc)
    //- Facebook Thumb 1200 × 675px, aspect 16:9
    meta(itemprop="image" content=shareThumb + "-facebook-optim.png")

    //- Facebook Open Graph
    meta(property='og:type' content='website')
    meta(property='og:url' content=shareUrl)
    meta(property='og:title' content=shareTitle)
    meta(property='og:description' content=shareDesc)
    //- Facebook Thumb 1200 × 675px, aspect 16:9
    meta(property="og:image" content=shareThumb + "-facebook-optim.png")
    <meta property="og:image:type" content="image/png" />
    <meta property="og:image:width" content="1419" />
    <meta property="og:image:height" content="798" />

    //- Twitter Card
    meta(name='twitter:card' content='summary_large_image')
    meta(name='twitter:site', content=shareTwitter)
    meta(name='twitter:creator', content='@nosplendorr')
    meta(name='twitter:domain' content=shareUrl)
    meta(name='twitter:title' content=shareTitle)
    meta(name="twitter:description" content=shareDesc)
    //- Twitter 1127px × 564px, aspect 2:1, minimum dimensions of 300x157 or maximum of 4096x4096 pixels
    meta(name="twitter:image" content=shareThumb + "-twitter-optim.png")
    meta(name="twitter:image:alt" content=shareAlt)
    meta(name='twitter:url' content=shareUrl)
    meta(name='twitter:label1' content='Now Available')
    meta(name='twitter:data1' content='Steam and PS VR')


