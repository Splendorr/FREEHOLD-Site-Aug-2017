                  span Google Play
                a.rise(href="http://store.steampowered.com/app/311720", title="Buy Sproggiwood on Steam") 
                  img(src="img/store-steam_80.png", alt="Steam logo")
                  span Steam
                a.rise(href="https://www.humblebundle.com/store/sproggiwood", title="Buy Sproggiwood on the Humble Store") 
                  img(src="img/store-humble_80.png", alt="Humble logo")
