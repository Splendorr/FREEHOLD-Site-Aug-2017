.clearfix, .cf
  clearfix()

percenter(value, pad = null)
  margin-left auto
  margin-right auto
  width 100%
  float: none
  u = unit(value)
  if (u is 'rem' or u is '%')
    max-width unit(value, u)
  else
    // max-width rem(value)
    max-width value
  if (pad is null)
    return
  else
    p = unit(pad)
    if (p is 'rem' or p is '%')
      padding-left  unit(pad, p)
      padding-right  unit(pad, p)
    else
      // padding-left rem(pad)
      // padding-right rem(pad)
      padding-left pad
      padding-right pad

