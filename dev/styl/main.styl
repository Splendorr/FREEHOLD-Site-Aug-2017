.flex-video {
  position: relative;
  padding-top: rem-calc(25);
  padding-bottom: 67.5%;
  height: 0;
  margin-bottom: rem-calc(16);
  overflow: hidden;

  &.widescreen { padding-bottom: 56.34%; }
  &.vimeo { padding-top: 0; }

  iframe,
  object,
  embed,
  video {
    position: absolute;
    top: 0;
    // #{$default-float}: 0;
    width: 100%;
    height: 100%;
  }
}

